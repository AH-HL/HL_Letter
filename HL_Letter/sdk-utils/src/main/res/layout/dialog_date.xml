<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/bg_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_dialog_date_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#f7f7f7"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15"
            android:paddingStart="@dimen/dp_15"
            android:text="@string/cancel"
            android:textColor="@color/color_0084CF"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/sp_17"
            android:textSize="@dimen/sp_18"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btn_dialog_date_decide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#f7f7f7"
            android:gravity="right|center"
            android:paddingEnd="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15"
            android:paddingStart="@dimen/dp_15"
            android:text="@string/confirm"
            android:textColor="@color/color_0084CF"
            android:textSize="@dimen/sp_17"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>

    <com.aahl.data.DialogPicker
        app:wheelCyclic="false"
        android:id="@+id/dayPicker_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>